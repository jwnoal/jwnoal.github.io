---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Head, { type Props as headProps } from "../components/Head.astro";
import CmdHeader from "../components/CmdHeader.astro";
import { site } from "../data/site";
import ParticlesBlog from "../components/Particles/ParticlesBlog.astro";

export interface Props extends headProps {
  className?: string;
}

const { className = "container", ...head } = Astro.props;
---

<!doctype html>
<html lang={site.lang}>
  <head>
    <Head {...head} />
  </head>
  <body>
    <ParticlesBlog />
    <slot name="header">
      <CmdHeader title={head.title} />
    </slot>
    <Navigation />
    <main class={className} id="main">
      <slot name="main"><slot />
    </main>
    <Footer />
  </body>
</html>
